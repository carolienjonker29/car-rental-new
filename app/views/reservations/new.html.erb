  <div class="container">
    <div class="row">
    <div class="col-sm-offset-3 col-sm-6 form-group">
        <div class="booking-form-box">
          <h2>Book your car here</h2>
           <%= simple_form_for @reservation do |a| %>
          <%= a.error_notification %>

          <%= a.input :start_date %>
          <%= a.input :end_date %>
          <%= a.input :number_of_persons %>
          <div>
          <%= a.button :submit, "send", class: "btn btn-success" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
